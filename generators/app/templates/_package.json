{
  "name": "@<%= answers['module:scope'] %>/<%= answers['module:name'] %>",
  "description": "<%= answers['module:description'] %>",
  "main": "dist/index.js",
  "jsnext:main": "dist/index.es2015.js",
  "version": "0.0.0-semantically-released",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:watch": "npm t -- -w",
    "test": "mocha test/unit test/functional  --compilers js:babel-register",
    "test:karma": "eslint lib/ spec/ && ./node_modules/karma/bin/karma start karma.conf.js",
    "test:karma:watch": "./node_modules/karma/bin/karma start karma.conf.js --auto-watch --no-single-run",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir lib --ignore test src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "es6"
  ],
  "author": {
    "name": "<%= answers['module:author:nickname'] %>",
    "email": "<%= answers['module:author:email'] %>",
    "url": "https://github.com/<%= answers['module:author:github'] %>"
  },
  "license": "<%= answers['license'] %>",
  "dependencies": {
    "babel-runtime": "~5.8.20",
    "react": "~0.13.3"
  },
  "devDependencies": {
    "babel-core": "~5.8.22",
    "babel-eslint": "^4.0.10",
    "babel-loader": "~5.3.2",
    "babel-cli": "*",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-register": "6.9.0",
    "css-loader": "~0.16.0",
    "chai": "3.5.0",
    "commitizen": "2.8.2",
    "coveralls": "*",
    "cz-conventional-changelog": "1.1.6",
    "es5-shim": "~4.1.10",
    "eslint": "^0.21.1",
    "eslint-plugin-react": "^2.3.0",
    "ghooks": "1.2.4",
    "jasmine": "~2.3.2",
    "jasmine-core": "~2.3.4",
    "karma": "~0.13.9",
    "karma-jasmine": "~0.3.6",
    "karma-phantomjs-launcher": "~0.2.1",
    "karma-sourcemap-loader": "~0.3.5",
    "karma-webpack": "~1.7.0",
    "mocha": "2.5.3",
    "nyc": "6.6.1",
    "rimraf": "2.5.2",
    "sass-loader": "~2.0.1",
    "semantic-release": "^4.3.5",
    "sinon": "*",
    "sinon-chai": "*",
    "style-loader": "~0.12.3",
    "webpack": "~1.11.0",
    "webpack-dev-server": "~1.10.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run test"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/<%= answers['module:scope'] %>/<%= answers['module:name'] %>.git"
  }
}
